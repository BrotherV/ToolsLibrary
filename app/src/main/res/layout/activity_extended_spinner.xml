<?xml version="1.0" encoding="utf-8"?>
<com.bvtech.toolslibrary.Layouts.ExtendCoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center"
    android:orientation="horizontal"
    tools:context=".ActivityMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.bvtech.toolslibrary.Widget.ExtendSpinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="96dp"
            app:tl_backgroundColor="@color/colorPrimary"
            app:tl_entries="@array/test_str"
            app:tl_textColor="@color/colorAccent" />

        <com.bvtech.toolslibrary.Widget.ExtendSpinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            app:tl_entries="@array/test_str"
            app:tl_shapeType="rectangle"
            app:tl_textColor="@color/colorAccent" />

        <com.bvtech.toolslibrary.Widget.ExtendSpinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            app:tl_cornerRadius="4dp"
            app:tl_entries="@array/test_str"
            app:tl_shapeType="rectangle"
            app:tl_strokeColor="@color/colorPrimary"
            app:tl_strokeSize="2dp"
            app:tl_textColor="@color/colorAccent" />

        <com.bvtech.toolslibrary.Widget.ExtendSpinner
            android:id="@+id/extendSpinner3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            app:tl_cornerRadius="4dp"
            app:tl_dropDownIcon="cornerIcon"
            app:tl_entries="@array/test_str"
            app:tl_fontType="@font/font"
            app:tl_iconColor="@color/colorAccent"
            app:tl_shapeType="rectangle"
            app:tl_strokeSize="2dp"
            app:tl_textColor="@color/colorAccent" />

        <com.bvtech.toolslibrary.Widget.ExtendSpinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            app:tl_cornerRadius="4dp"
            app:tl_dropDownIcon="cornerIcon"
            app:tl_entries="@array/test_str"
            app:tl_imageEntries="@array/test_img"
            app:tl_ltrTypeFace="timesi"
            app:tl_rtlTypeFace="zar"
            app:tl_shapeType="rectangle"
            app:tl_strokeColor="@color/colorPrimary"
            app:tl_strokeSize="2dp"
            app:tl_textColor="@color/colorAccent" />

        <com.bvtech.toolslibrary.Widget.ExtendSpinner
            android:id="@+id/extendSpinner2"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            app:tl_cornerRadius="0dp"
            app:tl_dropDownIcon="cornerIcon"
            app:tl_entries="@array/countries"
            app:tl_entryValues="@array/country_codes"
            app:tl_imageEntries="@array/country_codes"
            app:tl_ltrTypeFace="times"
            app:tl_rtlTypeFace="zar"
            app:tl_shapeType="rectangle"
            app:tl_strokeColor="@color/colorPrimary"
            app:tl_strokeSize="2dp"
            app:tl_textColor="@color/colorAccent" />

        <com.bvtech.toolslibrary.Widget.ExtendSpinner
            android:id="@+id/extendSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            app:tl_cornerRadius="0dp"
            app:tl_dropDownIcon="cornerIcon"
            app:tl_entries="@array/test_str"
            app:tl_entryValues="@array/test_entryValue"
            app:tl_imageEntries="@array/test_img"
            app:tl_ltrTypeFace="font_en"
            app:tl_rtlTypeFace="font_fa"
            app:tl_shapeType="rectangle"
            app:tl_strokeColor="@color/colorAccent"
            app:tl_strokeSize="2dp"
            app:tl_textColor="@color/colorAccent" />

    </LinearLayout>

</com.bvtech.toolslibrary.Layouts.ExtendCoordinatorLayout>