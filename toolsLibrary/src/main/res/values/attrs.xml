<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="WidgetAttributes" >
        <attr name="tl_backgroundColor" format="reference"/>
        <attr name="tl_strokeColor" format="reference"/>
        <attr name="tl_strokeSize" format="dimension"/>
        <attr name="tl_cornerRadius" format="dimension"/>
        <attr name="tl_shapeType" format="integer">
            <enum name="rectangle" value="0xA01" />
            <enum name="oval" value="0xA02" />
        </attr>
        <attr name="tl_dropDownIcon" format="integer">
            <enum name="simple" value="0xA03" />
            <enum name="cornerIcon" value="0xA04" />
        </attr>
        <attr name="tl_layoutDirection" format="integer">
            <enum name="ltr" value="1" />
            <enum name="rtl" value="2" />
        </attr>
        <attr name="tl_iconColor" format="reference"/>
        <attr name="tl_textColor" format="reference"/>
        <attr name="tl_textSize" format="dimension"/>
        <attr name="tl_imageSize" format="dimension"/>
        <attr name="tl_entries" />
        <attr name="tl_entryValues" />
        <attr name="tl_imageEntries" />
        <attr name="tl_rtlTypeFace" format="string"/>
        <attr name="tl_ltrTypeFace" format="string"/>
        <attr name="tl_fontType" format="reference"/>

        <attr name="tl_rippleColor" format="color" localization="suggested" />
        <attr name="tl_rippleDimension" format="dimension" localization="suggested" />
        <attr name="tl_rippleOverlay" format="boolean" localization="suggested" />
        <attr name="tl_rippleAlpha" format="float" localization="suggested" />
        <attr name="tl_rippleDuration" format="integer" localization="suggested" />
        <attr name="tl_hoverDuration" format="integer" localization="suggested" />
        <attr name="tl_rippleFadeDuration" format="integer" localization="suggested" />
        <attr name="tl_rippleHover" format="boolean" localization="suggested" />
        <attr name="tl_rippleBackground" format="color" localization="suggested" />
        <attr name="tl_rippleDelayClick" format="boolean" localization="suggested" />
        <attr name="tl_ripplePersistent" format="boolean" localization="suggested" />
        <attr name="tl_rippleInAdapter" format="boolean" localization="suggested" />
        <attr name="tl_rippleStartFromCenter" format="boolean" localization="suggested" />
        <attr name="tl_rippleFixCircleRadius" format="boolean" localization="suggested" />
        <attr name="tl_rippleEnableMove" format="boolean" localization="suggested" />
        <attr name="tl_rippleRoundedCorners" format="dimension" localization="suggested" />
    </declare-styleable>

</resources>